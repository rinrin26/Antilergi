<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:elevation="0dp"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/btn_arrow_back"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/arrow_back"
                android:layout_marginStart="@dimen/normal_100"
                app:tint="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detail ALergi"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/btn_arrow_back"
                app:layout_constraintRight_toRightOf="parent"
                />

        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/tv_tag_line_alergi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alergi Debu"
        android:textSize="@dimen/h5"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="@dimen/normal_150"
        android:layout_marginStart="@dimen/normal_100"
        android:layout_marginEnd="@dimen/normal_100"
    />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_detail_Alergi"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/tv_tag_line_alergi">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_content_alergi"
            android:text="Content Alergi "
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_marginTop="5dp"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_tag_line_deskripsi_alergi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alergi Debu"
        android:textSize="@dimen/h5"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="@dimen/normal_150"
        android:layout_marginStart="@dimen/normal_100"
        android:layout_marginEnd="@dimen/normal_100"
        app:layout_constraintTop_toBottomOf="@id/card_detail_Alergi"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_detail_deskripsi"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/tv_tag_line_deskripsi_alergi">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_content_deskripsi"
            android:text="Content deskripsi "
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_marginTop="5dp"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_tag_line_gejala_alergi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alergi Debu"
        android:textSize="@dimen/h5"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="@dimen/normal_150"
        android:layout_marginStart="@dimen/normal_100"
        android:layout_marginEnd="@dimen/normal_100"
        app:layout_constraintTop_toBottomOf="@id/card_detail_deskripsi"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_detail_gejala"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/tv_tag_line_gejala_alergi">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_content_gejala"
            android:text="Content gejala "
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_marginTop="5dp"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_tag_line_penyebab_alergi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alergi Debu"
        android:textSize="@dimen/h5"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="@dimen/normal_150"
        android:layout_marginStart="@dimen/normal_100"
        android:layout_marginEnd="@dimen/normal_100"
        app:layout_constraintTop_toBottomOf="@id/card_detail_gejala"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_detail_penyebab"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/tv_tag_line_penyebab_alergi">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_content_penyebab"
            android:text="Content gejala "
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_marginTop="5dp"
            />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/tv_tag_line_solusi_alergi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alergi Debu"
        android:textSize="@dimen/h5"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="@dimen/normal_150"
        android:layout_marginStart="@dimen/normal_100"
        android:layout_marginEnd="@dimen/normal_100"
        app:layout_constraintTop_toBottomOf="@id/card_detail_penyebab"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_detail_solusi"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/tv_tag_line_penyebab_alergi">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_content_solusi"
            android:text="Content gejala "
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_marginTop="5dp"
            />
    </androidx.cardview.widget.CardView>
</LinearLayout>
</ScrollView>